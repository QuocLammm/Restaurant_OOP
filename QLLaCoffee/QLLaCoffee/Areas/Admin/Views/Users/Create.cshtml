@model QLLaCoffee.Models.User

@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <p class="card-title">Thêm người dùng</p>
                <a href="@Url.Action("Index", "Users")" class="btn btn-primary">
                    <i class="ti-arrow-left"></i>
                </a>
            </div>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-labe col-md-12">Tên người dùng<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-labe col-md-12">Số điện thoại<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-labe col-md-12">Hình ảnh</label>
                            <div class="col-md-10">
                                <input type="file" name="img" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled placeholder="Tải hình ảnh">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-secondary" type="button">Tải lên</button>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.UserImage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-12">Giới tính<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                <label class="mr-2">
                                    @Html.RadioButtonFor(model => model.Gender, "Nam") Nam
                                </label>
                                <label>
                                    @Html.RadioButtonFor(model => model.Gender, "Nữ") Nữ
                                </label>
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger d-block" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="control-labe col-md-12">Tên loại người dùng<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                @Html.DropDownList("UserCategoryID", null, "Tên loại người dùng", htmlAttributes: new { @class = "form-control js-example-basic-single" })
                                @Html.ValidationMessageFor(model => model.UserCategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-labe col-md-12">Tên tài khoản<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                                <p class="text-danger">@ViewBag.Error</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-labe col-md-12">Mật khẩu<span class="text-danger"> (*)</span></label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })                          
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-info btn-icon-text"><i class="ti-file btn-icon-prepend"></i>Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
}

